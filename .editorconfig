# EditorConfig at https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{js,py,html,vue}]
charset = utf-8

# 2 space indentation
[*]
indent_style = space
indent_size = 2

# others
[*]
trim_trailing_whitespace = true
max_line_length = 80
